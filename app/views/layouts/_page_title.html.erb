<div class="page-title pull-right">
  <div class="btn-group">
    <button type="button" class="btn btn-default btn-lg"><%= yield(:page_title) %></button>
    <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <span class="caret"></span>
      <span class="sr-only">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <% @categories.each do |category| %>
        <li><%= link_to category.name %></li>
      <% end %>
    </ul>
  </div>
</div>
