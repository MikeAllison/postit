<div class="row category-list">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading text-center">
        <h3>All Categories</h3>
      </div>
      <div class="panel-body table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Category</th>
              <th class="text-center">Posts</th>
              <th class="text-right">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td class="text-center"><%= category.unhidden_posts_count %></td>
                <td class="text-right">
                  <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-default btn-xs' %>
                  <%= link_to 'Show', category_path(category), class: 'btn btn-default btn-xs' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Add a Category', new_admin_category_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
