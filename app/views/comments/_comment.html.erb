<!-- @comment.each do |comment| -->
  <div class="row">

    <div class="col-sm-2 hidden-xs"> <!-- BEGIN NON-MOBILE VOTING COLUMN -->
      <div id="<%= dom_id(comment) %>-voting-box">
        <%= render 'votes/comment_voting_box', obj1: comment.post, obj2: comment %>
      </div>
    </div> <!-- END NON-MOBILE VOTING COLUMN -->

    <div class="col-sm-10"> <!-- BEGIN EACH COMMENT COLUMN -->
      <div class="post-comment well well-sm">
        <blockquote>
          <p><q><%= comment.body %></q> <em><%= post_link(comment) if user_profile_page %></em></p> <!-- CommentsHelper-->
          <footer><%= link_to comment.creator.username, comment.creator %> <cite><%= formatted_date_time(comment) %></cite></footer>
          <div id="<%= dom_id(comment) %>-voting-box-mobile" class="visible-xs comment-voting-btns-mobile"> <!-- BEGIN MOBILE VOTING COLUMN -->
            <%= render 'votes/comment_voting_box_mobile', obj1: comment.post, obj2: comment %>
          </div> <!-- END MOBILE VOTING COLUMN -->
        </blockquote>
      </div>
    </div> <!-- END EACH COMMENT COLUMN -->

  </div> <!-- END .row -->
<!-- end -->
