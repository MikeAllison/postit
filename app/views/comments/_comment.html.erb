<!-- @comments.each do |comment| -->
  <div id="<%= dom_id(comment) %>" class="row">

    <%= render 'comments/voting_box', obj: comment %>

    <div class="col-sm-10"> <!-- BEGIN EACH COMMENT COLUMN -->
      <div class="well well-sm post-comment">
        <blockquote>
          <h4 class="text-danger flagged-item-msg"><%= flagged_item_msg(comment) unless admin_flags_index? %></h4> <!-- AppHelper -->
          <p class="comment-body"><%= comment_body(comment) %></p> <!-- CommentsHelper -->
          <footer class="comment-footer"><%= comment_footer(comment) %></footer> <!-- CommentsHelper -->
        </blockquote>
        <div class="row">
          <div class="col-xs-12 text-right">
            <span class="flag-btn">
              <%= hide_item_btn(comment) if logged_in? && current_user.admin? && admin_flags_index? %> <!-- AppHelper -->
              <%= clear_flags_comment_btn(comment) if logged_in? && current_user.admin? && admin_flags_index? %> <!-- AppHelper -->
              <%= flag_btn(comment) if logged_in? && current_user.moderator? %> <!-- AppHelper -->
            </span>
            <%= render 'comments/voting_box_mobile', obj: comment %>
          </div>
        </div>
      </div>
    </div> <!-- END EACH COMMENT COLUMN -->

  </div> <!-- END .row -->
<!-- end -->
