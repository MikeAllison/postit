<% if @vote.new_record? %>
  <% @vote.vote = @submitted_vote %>
  <% @vote.save %>
<% elsif @vote.persisted? && @vote.vote == !@submitted_vote %>
  <% @vote.update(vote: @submitted_vote) %>
<% elsif @vote.persisted? && @vote.vote == @submitted_vote %>
  bootbox.alert("You have already voted on this comment.");
<% else %>
  bootbox.alert("Sorry, your vote couldn't be added.");
<% end %>

// Reload the vote partials
$("#<%= dom_id(@comment) %>_voting_box").html("<%= j render 'voting_box', obj: @comment %>");
$("#<%= dom_id(@comment) %>_voting_box_mobile").html("<%= j render 'voting_box_mobile', obj: @comment %>");
