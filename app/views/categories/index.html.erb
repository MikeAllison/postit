<%= link_to 'Add a Category', new_category_path, class: 'btn btn-primary' %>
<br /><br />

<div class="row">
  <div class="col-xs-12">
    <div class="well">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Category</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td><td><%= link_to 'Edit', edit_category_path(category) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
  </div>
</div>
