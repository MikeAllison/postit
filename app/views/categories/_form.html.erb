<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-xs-12">
    <div class="well">
      <%= form_for @category do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit @category.new_record? ? 'Add Category' : 'Update Category', class: 'btn btn-primary' %>
          <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
