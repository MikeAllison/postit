<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default text-center">
      <div class="panel-heading">
        <h3><strong>Sorry, there are no posts<%= @category.nil? ? '.' : ' for this category.' %></strong></h3>
      </div>
      <div class="panel-body">
        <% if logged_in? %>
          <h4>Would you like to <%= link_to 'create', new_post_path(first_post: @category.id) %> one?</h4>
        <% else %>
          <h4><%= link_to 'Log in', login_path %> to create one.</h4>
        <% end %>
      </div>
    </div>
  </div>
</div>
