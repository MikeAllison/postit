<% if @error_msg %>
  bootbox.alert("<%= @error_msg %>");
<% end %>

$("#<%= dom_id(obj, :flag) %>").replaceWith("<%= j flag_link(obj) %>");

<% if obj.class == Post %>
  $("#<%= dom_id(obj) %>").replaceWith("<%= j render 'posts/post', post: obj %>");
<% elsif obj.class == Comment %>
  <% #binding.pry %>
  $("#<%= dom_id(obj) %>").replaceWith("<%= j render 'comments/comment', comment: obj %>");
<% end %>
