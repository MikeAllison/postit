$("#all-posts").html("<%= j render @posts.paginate(params[:page]) %>");
$("#pagination-links").html("<%= j pagination_links(@posts) %>");

// Shows each h4 .flagged-item-msg if it contains a message
$('.flagged-item-msg').each(function() {
  if ($(this).text().length !== 0) {
    $(this).show();
  }
});

$('body').scrollTop(0);
