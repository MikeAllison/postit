<div class="row">
  <div id="new-post-btn" class="col-xs-1 col-sm-offset-2">
    <%= new_post_button %> <!-- PostsHelper -->
  </div>
  <div class="col-sm-9">
    <div class="pull-right page-title">
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-lg"><%= page_title %></button> <!-- AppHelper -->
        <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'All Posts', root_path %></li>
          <% if Category.any? # Show first divider if there are categories %>
            <li class="divider"></li>
          <% end %>
          <% Category.all.each do |category| %>
            <li><%= link_to category.name, category %></li>
          <% end %>
          <% if logged_in? && current_user.admin? # Show 'Add Category' link if logged in and admin %>
            <li class="divider"></li>
            <li>
              <%= link_to new_category_path do %>
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;&nbsp;Add Category
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
