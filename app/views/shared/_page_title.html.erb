<div class="row">
  <div class="col-xs-1 col-sm-offset-2">
    <%= link_to 'New Post', new_post_path, class: 'btn btn-lg btn-primary' %>
  </div>
  <div class="col-sm-9">
    <div class="page-title pull-right">
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-lg"><%= page_title %></button>
        <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'All Posts', root_path %></li>
          <li class="divider"></li>
          <% Category.all.each do |category| %>
            <li><%= link_to category.name, category_path(category) %></li>
          <% end %>
          <li class="divider"></li>
          <li>
            <%= link_to new_category_path do %>
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;&nbsp;Add Category
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
