<div class="row post-category-section">
  <div id="new-post-btn" class="col-sm-1 col-sm-offset-2 hidden-xs">
    <%= new_post_button %> <!-- PostsHelper -->
  </div>

  <div class="col-sm-9">
    <div class="pull-right">
      <div class="btn-group">
        <button type="button" class="btn btn-default btn-lg"><%= category_title %></button> <!-- AppHelper -->
        <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          <span class="caret"></span>
          <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'All Posts', root_path %></li>
          <% if Category.any? # Show first divider if there are categories %>
            <li class="divider"></li>
          <% end %>
          <% Category.all.each do |category| %>
            <li><%= link_to "#{category.name} (#{category.unhidden_posts_count})", category %></li>
          <% end %>
          <% if logged_in? && current_user.admin? # Show 'Add Category' link if logged in and admin %>
            <li class="divider"></li>
            <li>
              <%= link_to new_admin_category_path do %>
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp;&nbsp;Add Category
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
