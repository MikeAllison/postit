<%= render 'shared/errors', obj: @post %>

<div class="row">
  <div class="col-xs-12">
    <div class="well">
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :url, 'URL' %>
          <%= f.text_field :url, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :category, 'Categories' %>
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {}, { class: 'checkbox checkbox-inline' } %>
        </div>
        <div class="form-group">
          <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary') %>
          <%= link_to 'Cancel', :back, class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
