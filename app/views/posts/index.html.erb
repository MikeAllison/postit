<% provide(:page_title, "All Posts") %>

<% @posts.each do |post| %>
  <div class="row post">
    <div class="col-xs-2">
      <div class="well text-center">
        <p>
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-thumbs-up text-success" aria-hidden="true"></span>
          </button>
        </p>
        <p>
          Votes
        </p>
        <p>
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-thumbs-down text-danger" aria-hidden="true"></span>
          </button>
        </p>
      </div>
    </div> <!-- END VOTE COLUMN -->
    <div class="col-xs-10">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><strong><%= link_to post.title, post.url %></strong></h3>
        </div> <!-- END .panel-heading -->
        <div class="panel-body">
          <p class="text-right">
            <% post.categories.each do |category| %>
              <button class="btn btn-default btn-sm"><%= category.name %></button>
            <% end %>
          </p>
          <p class="description">
            <%= post.description %>
          </p>
          <hr />
          <p><small>Posted by</small> <a href="#"><%= post.creator.username %></a> <small><%= post.created_at.strftime("on %m/%d/%Y at %l:%M %Z") %></small></p>
        </div> <!-- END PANEL BODY -->
        <div class="panel-footer">
          <button class="btn btn-primary btn-xs" type="button">
            <span class="badge">14</span> Comments
          </button>
        </div> <!-- END .panel-footer -->
      </div> <!-- END .panel -->
    </div> <!-- END POST COLUMN -->
  </div> <!-- END ROW -->
<% end %>
