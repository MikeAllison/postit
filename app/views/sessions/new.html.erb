<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="text-center"><strong>Login to PostIt!</strong></h3>
      </div>

      <div class="panel-body">
        <%= form_tag login_path do %>
          <div class="form-group">
            <%= label_tag :username %>
            <%= text_field_tag :username, params[:username] || nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-lock" aira-hidden="true"></span>
              Log In
            <% end %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
